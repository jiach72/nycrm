{
  "name": "tonghai-nanyang",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "backend"
  ],
  "scripts": {
    "dev:website": "npm run dev -w @tonghai/website",
    "dev:management": "npm run dev -w @tonghai/management",
    "dev:portal": "npm run dev -w @tonghai/customer-portal",
    "dev:backend": "npm run dev -w @tonghai/backend",
    "build:website": "npm run build -w @tonghai/website",
    "build:management": "npm run build -w @tonghai/management",
    "build:portal": "npm run build -w @tonghai/customer-portal",
    "build:all": "npm run build:website && npm run build:management && npm run build:portal",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3"
  }
}